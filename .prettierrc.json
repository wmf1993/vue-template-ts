{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "proseWrap": "never",
  "vueIndentScriptAndStyle": true,
  "endOfLine": "auto",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],

  "importOrder": [
    "^@types/(.*)$",
    "^node(.*)$",
    "^vue(.*)$",
    "^@?\\w",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,

  "trailingComma": "none"
}
